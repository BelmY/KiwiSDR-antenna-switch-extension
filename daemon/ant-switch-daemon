# Install instructions
# sudo apt-get install xinetd
# cp ant-switch-daemon /etc/xinet.d/
# /etc/init.d/xinetd restart
#
# then telnet to your kiwisdr
#     telnet sdr.vy.fi 65000
# and give a command, for example h for help

service ant-switch-daemon
{
    disable         = no
    port            = 65000
    socket_type     = stream
    protocol        = tcp
    wait            = no
    user            = root
    server          = /root/extensions/ant_switch/daemon/ant-switch-daemon-wrapper
    instances       = 1
    type            = unlisted
    #only_from	    = 192.168.0.123
}
